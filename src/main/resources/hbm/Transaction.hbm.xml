<?xml version = "1.0" encoding = "utf-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="models.Transaction" table="transaction">
        <id name="id" type="java.lang.Long" column="id">
            <generator class="identity"/>
        </id>

        <property name="dateTime"/>
        <property name="price"/>

        <many-to-one name="category" class="models.Category" fetch="select">
            <column name="category_id"/>
        </many-to-one>

        <many-to-one name="user" class="models.User" fetch="select">
            <column name="user_id"/>
        </many-to-one>

        <many-to-one name="balance" class="models.Balance"
                    cascade="save-update">
        </many-to-one>

    </class>

</hibernate-mapping>